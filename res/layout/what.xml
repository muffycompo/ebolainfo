<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eiBlueBgMain" >

    <LinearLayout
        android:id="@+id/whatH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_8dp_space"
        android:paddingLeft="@dimen/margin_16dp_space"
        android:paddingRight="@dimen/margin_16dp_space"
        android:paddingTop="@dimen/margin_8dp_space" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_is_ebola"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/whatFooter"
        android:layout_below="@+id/whatH" >

        <RelativeLayout
            android:id="@+id/whatRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_16dp_space"
            android:layout_marginRight="@dimen/margin_16dp_space"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_8dp_space"
            android:paddingTop="@dimen/margin_8dp_space" >

            <TextView
                android:id="@+id/it_is_bloody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/it_is_bloody"
                android:textColor="@color/eiYelloColorLight"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="italic" />

            <ng.edu.binghamuni.gdg.ebolainfo.TextViewEx
                android:id="@+id/it_is_bloody_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/it_is_bloody"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/it_is_contagious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/it_is_bloody_msg"
                android:text="@string/it_is_contagious"
                android:textColor="@color/eiYelloColorLight"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="italic" />

            <ng.edu.binghamuni.gdg.ebolainfo.TextViewEx
                android:id="@+id/it_is_contagious_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/it_is_contagious"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/really_deadly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/it_is_contagious_msg"
                android:text="@string/really_deadly"
                android:textColor="@color/eiYelloColorLight"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="italic" />

            <ng.edu.binghamuni.gdg.ebolainfo.TextViewEx
                android:id="@+id/really_deadly_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/really_deadly"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/un_treatable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/really_deadly_msg"
                android:text="@string/un_treatable"
                android:textColor="@color/eiYelloColorLight"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="italic" />

            <ng.edu.binghamuni.gdg.ebolainfo.TextViewEx
                android:id="@+id/un_treatable_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/un_treatable"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/whatFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/darkBlue"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_8dp_space"
        android:paddingLeft="@dimen/margin_16dp_space"
        android:paddingRight="@dimen/margin_16dp_space"
        android:paddingTop="@dimen/margin_8dp_space" >

        <android.support.v7.widget.Space
            android:id="@+id/sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/whatNextBtn"
            style="@style/btnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8dp_space"
            android:layout_weight="1"
            android:minHeight="36dp"
            android:text="@string/next" />
    </LinearLayout>

</RelativeLayout>